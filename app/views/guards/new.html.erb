<h1>Guard Sign Up</h1>

<%= form_for(:guard, :url => {:controller => 'guards', :action => 'create'}) do |f| %>

  <%= f.label :email %> <br>
  <%= f.text_field :email %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br>

  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br>

  <%= f.submit %>
<% end %>

<% if @guard.errors.any? %>
    <ul>
    <% for message_error in @guard.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
<% end %>
